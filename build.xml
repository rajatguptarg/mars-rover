<?xml version="1.0"?>

<project name="mars-rover" default="runjunit" basedir=".">

    <property name="lib.dir" value="lib"/>

    <path id="classpath">
        <fileset dir="${lib.dir}" includes="*.jar"/>
    </path>

    <target name="compile">
        <javac srcdir="src" includeantruntime="false" destdir="out" classpath="lib/junit-4.11.jar" />
        <javac srcdir="test" includeantruntime="false" destdir="out" classpath="lib/junit-4.11.jar" />
    </target>

    <target name="runjunit" depends="compile" >
        <junit haltonfailure="true" printsummary="true" showoutput="yes" >
            <test name="com.rover.RoverTest" />
            <test name="com.rover.DriverTest" />
            <!--<test name="com.rover.PlatueTest" />-->
            <classpath>
                <pathelement location="out" />
                <path refid="classpath" />
            </classpath>
            <formatter type="plain" usefile="false"/>
        </junit>
    </target>

</project>